<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TeamDraft" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#FFFFFF</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="actionOverflowButtonStyle">@style/ThreeDotColor</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.TeamDraft.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/custom_chip</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="rippleColor">@color/whiteAlpha</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/black</item>
    </style>

    <style name="ThreeDotColor" parent="Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="tint">@color/black</item>
    </style>

    <style name="Theme.TeamDraft.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="roundedTopCorners">
        <item name="cornerSizeTopLeft">17dp</item>
        <item name="cornerSizeBottomLeft">17dp</item>
    </style>

    <style name="Theme.TeamDraft.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>